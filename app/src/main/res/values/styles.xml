<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Menu" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppDarkTheme" parent="Theme.MaterialComponents">
        <item name="back_color">@android:color/white</item>
        <item name="level_positive_color">@android:color/holo_red_dark</item>
        <item name="level_negative_color">@android:color/holo_blue_dark</item>
        <item name="startColor">@color/black_100</item>
        <item name="endColor">@color/dark_gray</item>
        <item name="colorDecorator">@color/dark_gray</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="back_color">@android:color/darker_gray</item>
        <item name="level_positive_color">@android:color/holo_red_light</item>
        <item name="level_negative_color">@color/blue</item>
        <item name="startColor">?attr/colorPrimary</item>
        <item name="endColor">?attr/colorOnPrimary</item>
        <item name="colorDecorator">@color/light_gray</item>
    </style>

    <style name="Theme.Menu.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>